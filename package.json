{
   	"name": "weknow-es6-mono-repo-dependencies-chart",
	"displayName": "WeKnow ES6 Mono Repo Dependencies Chart",
	"description": "Visualize and Validate ES6 imports within a mono-repo",
	"version": "0.0.1",
	"license": "MIT",
	"repository": "https://github.com/bnayae/weknow-es6-mono-repo-dependencies-chart",
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Linters", "Visualization"
	],
	"activationEvents": [
        "onCommand:weknow-es6-mono-repo-dependencies-chart.validate-dependencies"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "weknow-es6-mono-repo-dependencies-chart.validate-dependencies",
				"title": "Validate Dependencies"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.65.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5",
		"ts-loader": "^9.2.8",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2",
		"@vscode/test-electron": "^2.1.3"
	}
}
